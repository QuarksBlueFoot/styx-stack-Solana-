{
  "name": "@styxstack/sdk",
  "version": "1.0.0",
  "description": "Styx Stack SDK - Complete Privacy SDK for Solana Apps",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sps": {
      "import": "./dist/sps.mjs",
      "require": "./dist/sps.js",
      "types": "./dist/sps.d.ts"
    },
    "./messaging": {
      "import": "./dist/messaging.mjs",
      "require": "./dist/messaging.js",
      "types": "./dist/messaging.d.ts"
    },
    "./easypay": {
      "import": "./dist/easypay.mjs",
      "require": "./dist/easypay.js",
      "types": "./dist/easypay.d.ts"
    },
    "./whisperdrop": {
      "import": "./dist/whisperdrop.mjs",
      "require": "./dist/whisperdrop.js",
      "types": "./dist/whisperdrop.d.ts"
    },
    "./privacy": {
      "import": "./dist/privacy.mjs",
      "require": "./dist/privacy.js",
      "types": "./dist/privacy.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/sps.ts src/messaging.ts src/easypay.ts src/whisperdrop.ts src/privacy.ts --format cjs,esm --dts --external @styxstack/sps-sdk",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "eslint src/",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "solana",
    "privacy",
    "sps",
    "styx",
    "easypay",
    "whisperdrop",
    "gasless",
    "stealth-address",
    "encrypted-messaging",
    "web3",
    "crypto"
  ],
  "author": "Bluefoot Labs (@moonmanquark)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuarksBlueFoot/StyxStack.git",
    "directory": "packages/styx-sdk"
  },
  "homepage": "https://styx.chat",
  "bugs": {
    "url": "https://github.com/QuarksBlueFoot/StyxStack/issues"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0 || ^2.0.0",
    "@styxstack/sps-sdk": "^3.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "dependencies": {
    "@noble/ciphers": "^1.0.0",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@solana/web3.js": ">=1.90.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
