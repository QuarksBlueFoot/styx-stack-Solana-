{
  "name": "@styx/sts-standard",
  "version": "0.1.0",
  "description": "STS Token Standard - Solana's first privacy-native token standard",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.3",
    "@solana/spl-token": "^0.4.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.95.0"
  },
  "keywords": [
    "solana",
    "privacy",
    "tokens",
    "nft",
    "sts",
    "styx",
    "token-standard",
    "zero-knowledge"
  ],
  "author": "Styx Protocol",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/styxprotocol/styxstack"
  }
}
